<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Buy Product</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link rel="stylesheet" href="/cssFiles/background.css">
  </head>
  <body>
    <%- include('navbar') %>
    <div class="banner">
    <div class="center2">
      <div class="card" style="width: 56rem;">
    <h1>Buy product</h1>
    <img src="" alt="">
    <h2><%= data.name %></h2>
    <p><%= currency(data.price) %></p>
    <p>Jumlah : 
      <input type="text" value="<%= data.qty %>" name="total">
    <% if (data.qty > 0) { %>
      <button class="btn btn-primary btn-lg" onclick="location.replace('/product/<%= data.id %>/decr')"> - </button>
    <% } else {%>
      <button class="btn btn-primary btn-lg" onclick="location.replace('/product/<%= data.id %>/decr')" disabled> - </button>
      <% } %>
    <button class="btn btn-primary btn-lg" onclick="location.replace('/product/<%= data.id %>/incr')"> + </button></p>
    <form action="/product/<%= data.id %>" method="post">
      <h3>Total Price</h3>
      <h4><%= currency(data.totalPayment(data.qty, data.price)) %></h4>
        <br>
        <button name="total" value="<%= data.totalPayment(data.qty, data.price) %>" class="btn btn-outline-warning btn-lg" type="submit">
          Add to Cart</button>
        </form>
      <br><button class="btn btn-danger" style="width: 100px;" onclick="location.replace('/menus')">cancel</button></p>
  </div>
</div>
</div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
  </body>
</html>